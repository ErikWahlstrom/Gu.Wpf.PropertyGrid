<Window x:Class="Gu.Wpf.PropertyGrid.Demo.UiTestWindows.DoubleSettingControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Gu.Wpf.PropertyGrid.Demo.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.Wpf.PropertyGrid.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:propertyGrid="http://gu.se/PropertyGrid"
        Title="DoubleSettingControlWindow"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d">
    <Window.DataContext>
        <demo:SettingsVm />
    </Window.DataContext>
    <StackPanel>
        <Button Content="lose focus" />
        <TextBox AutomationProperties.AutomationId="currentValueTextBox" Text="{Binding EditableCopy.DoubleValue}" />
        <TextBox AutomationProperties.AutomationId="currentNullableValueTextBox" Text="{Binding EditableCopy.NullableDoubleValue, Converter={x:Static converters:NullableDoubleToStringConverter.Default}}" />

        <propertyGrid:SettingsControl DataContext="{Binding EditableCopy}" OldDataContext="{Binding DataContext.LastSaved, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
            <propertyGrid:DoubleSettingControl Header="default" Value="{Binding DoubleValue}" />
            <propertyGrid:DoubleSettingControl Header="propertychanged" Value="{Binding DoubleValue, UpdateSourceTrigger=PropertyChanged}" />
            <propertyGrid:DoubleSettingControl Header="readonly"
                                               IsReadOnly="True"
                                               Value="{Binding DoubleValue}" />

            <propertyGrid:DoubleSettingControl CanValueBeNull="True"
                                               Header="nullable"
                                               Value="{Binding NullableDoubleValue}" />
        </propertyGrid:SettingsControl>
    </StackPanel>
</Window>
