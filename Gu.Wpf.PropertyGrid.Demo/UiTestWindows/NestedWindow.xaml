<Window x:Class="Gu.Wpf.PropertyGrid.Demo.UiTestWindows.NestedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.Wpf.PropertyGrid.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:propertyGrid="http://gu.se/PropertyGrid"
        Title="NestedWindow"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d">
    <Window.DataContext>
        <demo:SettingsVm />
    </Window.DataContext>
    <propertyGrid:SettingsControl DataContext="{Binding EditableCopy}" OldDataContext="{Binding DataContext.LastSaved, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
        <propertyGrid:StringSettingControl Header="default" Value="{Binding StringValue}" />

        <TextBlock>First nested below</TextBlock>
        <propertyGrid:SettingsControl DataContext="{Binding}"
                                      OldDataContext="{Binding DataContext.LastSaved,
                                                               RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                      Style="{StaticResource {x:Static propertyGrid:Keys.NestedSettingListStyle}}">
            <propertyGrid:StringSettingControl Header="short" Value="{Binding StringValue}" />
        </propertyGrid:SettingsControl>

        <TextBlock>Second nested below</TextBlock>
        <propertyGrid:SettingsControl DataContext="{Binding}"
                                      OldDataContext="{Binding DataContext.LastSaved,
                                                               RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                      Style="{StaticResource {x:Static propertyGrid:Keys.NestedSettingListStyle}}">
            <propertyGrid:StringSettingControl Header="long so long" Value="{Binding StringValue}" />
        </propertyGrid:SettingsControl>
    </propertyGrid:SettingsControl>
</Window>
