<Window x:Class="Gu.Wpf.PropertyGrid.Demo.UiTestWindows.SuffixWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.Wpf.PropertyGrid.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:propertyGrid="http://gu.se/PropertyGrid"
        Title="SuffixWindow"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="AutomationProperties.ItemStatus" Value="Green" />
            <Setter Property="Foreground" Value="Green" />
        </Style>

        <Style TargetType="{x:Type propertyGrid:SuffixBlock}">
            <Setter Property="AutomationProperties.ItemStatus" Value="Blue" />
            <Setter Property="Foreground" Value="Blue" />
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <demo:SettingsVm />
    </Window.DataContext>
    <propertyGrid:SettingsControl>
        <propertyGrid:StringSettingControl Header="default"
                                           Suffix="suffix"
                                           Value="abc" />

        <propertyGrid:SettingsControl>
            <propertyGrid:SettingsControl.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="AutomationProperties.ItemStatus" Value="Green" />
                    <Setter Property="Foreground" Value="Green" />
                </Style>
            </propertyGrid:SettingsControl.Resources>
            <propertyGrid:StringSettingControl Header="textblock style"
                                               Suffix="suffix"
                                               Value="abc" />
        </propertyGrid:SettingsControl>

        <propertyGrid:SettingsControl>
            <propertyGrid:SettingsControl.Resources>
                <Style TargetType="{x:Type propertyGrid:SuffixBlock}">
                    <Setter Property="AutomationProperties.ItemStatus" Value="implicit blue" />
                    <Setter Property="Foreground" Value="Blue" />
                </Style>
            </propertyGrid:SettingsControl.Resources>
            <propertyGrid:StringSettingControl Header="implicit suffixblock style"
                                               Suffix="suffix"
                                               Value="abc" />
        </propertyGrid:SettingsControl>

        <propertyGrid:SettingsControl>
            <propertyGrid:SettingsControl.Resources>
                <Style x:Key="SuffixStyle" TargetType="{x:Type propertyGrid:SuffixBlock}">
                    <Setter Property="AutomationProperties.ItemStatus" Value="explicit pink" />
                    <Setter Property="Foreground" Value="HotPink" />
                </Style>
            </propertyGrid:SettingsControl.Resources>
            <propertyGrid:StringSettingControl Header="explicit suffixblock style"
                                               Suffix="suffix"
                                               SuffixStyle="{StaticResource SuffixStyle}"
                                               Value="abc" />
        </propertyGrid:SettingsControl>

        <propertyGrid:SettingsControl>
            <propertyGrid:SettingsControl.SuffixStyle>
                <Style TargetType="{x:Type propertyGrid:SuffixBlock}">
                    <Setter Property="AutomationProperties.ItemStatus" Value="inherit khaki" />
                    <Setter Property="Foreground" Value="DarkKhaki" />
                </Style>
            </propertyGrid:SettingsControl.SuffixStyle>
            <propertyGrid:StringSettingControl Header="inherit suffixblock style"
                                               Suffix="suffix"
                                               Value="abc" />
        </propertyGrid:SettingsControl>
    </propertyGrid:SettingsControl>
</Window>
