<Window x:Class="Gu.Wpf.PropertyGrid.Demo.EnumSettingControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.Wpf.PropertyGrid.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:propertyGrid="http://gu.se/PropertyGrid"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="EnumSettingControlWindow"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d">

    <Window.DataContext>
        <demo:SettingsVm />
    </Window.DataContext>
    <StackPanel>
        <Button Content="lose focus" />
        <TextBlock AutomationProperties.AutomationId="currentTextBlock" Text="{Binding EditableCopy.CurrentStringComparison}" />

        <propertyGrid:SettingsControl DataContext="{Binding EditableCopy}" OldDataContext="{Binding DataContext.LastSaved, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
            <propertyGrid:EnumSettingControl Header="current" Value="{Binding CurrentStringComparison}" />

            <propertyGrid:EnumSettingControl Header="explicit_type" Value="{Binding CurrentStringComparison}" />

            <propertyGrid:EnumSettingControl EnumType="{x:Type system:StringComparison}"
                                             Header="readonly"
                                             IsReadOnly="True"
                                             Value="{Binding CurrentStringComparison}" />
        </propertyGrid:SettingsControl>

        <propertyGrid:SettingsControl DataContext="{Binding EditableCopy}" OldDataContext="{Binding DataContext.LastSaved, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
            <propertyGrid:SettingsControl.Resources>
                <Style TargetType="{x:Type ComboBox}">
                    <Setter Property="IsEditable" Value="True" />
                </Style>
            </propertyGrid:SettingsControl.Resources>

            <propertyGrid:EnumSettingControl EnumType="{x:Type system:StringComparison}"
                                             Header="lostfocus"
                                             Value="{Binding CurrentStringComparison,
                                                             UpdateSourceTrigger=LostFocus}" />

            <propertyGrid:EnumSettingControl EnumType="{x:Type system:StringComparison}"
                                             Header="editable"
                                             Value="{Binding CurrentStringComparison}" />
        </propertyGrid:SettingsControl>
    </StackPanel>
</Window>
