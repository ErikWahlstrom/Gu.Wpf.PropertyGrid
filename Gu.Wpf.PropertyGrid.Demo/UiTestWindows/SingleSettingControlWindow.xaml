<Window x:Class="Gu.Wpf.PropertyGrid.Demo.UiTestWindows.SingleSettingControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.Wpf.PropertyGrid.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:propertyGrid="http://gu.se/PropertyGrid"
        Title="SingleSettingControlWindow"
        mc:Ignorable="d">
    <Window.DataContext>
        <demo:SettingsVm />
    </Window.DataContext>

    <propertyGrid:LengthSettingControl Header="length (m)"
                                       Unit="m"
                                       Value="{Binding EditableCopy.LengthValue}" />
</Window>
