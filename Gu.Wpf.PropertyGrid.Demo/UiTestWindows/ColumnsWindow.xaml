<Window x:Class="Gu.Wpf.PropertyGrid.Demo.UiTestWindows.ColumnsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:propertyGrid="http://gu.se/PropertyGrid"
        Title="ColumnsWindow"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d">
    <StackPanel>
        <propertyGrid:SettingsControl Background="AliceBlue"
                                      HeaderWidth="50"
                                      SuffixWidth="10"
                                      ValueWidth="70">
            <propertyGrid:StringSettingControl Header="a"
                                               Suffix="a"
                                               Value="short" />
        </propertyGrid:SettingsControl>
    </StackPanel>
</Window>
