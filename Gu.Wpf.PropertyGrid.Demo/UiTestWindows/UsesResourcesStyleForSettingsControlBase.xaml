<Window x:Class="Gu.Wpf.PropertyGrid.Demo.UsesResourcesStyleForSettingsControlBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.Wpf.PropertyGrid.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:propertyGrid="http://gu.se/PropertyGrid"
        Title="UsesResourcesStyleForSettingsControlBase"
        Width="300"
        Height="300"
        mc:Ignorable="d">
    <Window.DataContext>
        <demo:SettingsVm />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="{x:Type propertyGrid:SettingControlBase}">
            <Setter Property="Background" Value="Red" />
        </Style>
    </Window.Resources>

    <propertyGrid:SettingsControl DataContext="{Binding EditableCopy}"
                                  OldDataContext="{Binding DataContext.LastSaved,
                                                           RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                  ValueMaxWidth="50"
                                  ValueMinWidth="50">
        <propertyGrid:StringSettingControl Header="string" Value="{Binding StringValue}" />
        <propertyGrid:StringSettingControl Header="readonly string"
                                           IsReadOnly="True"
                                           Value="{Binding StringValue}" />

        <propertyGrid:DoubleSettingControl Header="double" Value="{Binding DoubleValue}" />

        <propertyGrid:LengthSettingControl Header="length" Value="{Binding LengthValue}" />
    </propertyGrid:SettingsControl>
</Window>
