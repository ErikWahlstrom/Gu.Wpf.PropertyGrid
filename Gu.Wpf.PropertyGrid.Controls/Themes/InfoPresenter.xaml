<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:l="clr-namespace:Gu.Wpf.PropertyGrid">

    <Style TargetType="{x:Type l:InfoPresenter}">
        <Setter Property="Grid.Row" Value="1" />
        <Setter Property="Grid.Column" Value="0" />
        <Setter Property="Grid.ColumnSpan" Value="2" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type l:InfoPresenter}">
                    <Grid HorizontalAlignment="Right">
                        <StackPanel>
                            <l:ErrorPresenter x:Name="ValueBoxErrorPresenter"
                                          Content="{Binding Path=(Validation.Errors),
                                                            ElementName=ValueBox}"
                                          Visibility="{Binding Path=(Validation.HasError),
                                                               ElementName=ValueBox,
                                                               Converter={l:BooleanToVisibilityConverter WhenTrue=Visible,
                                                                                                         WhenNull=Collapsed,
                                                                                                         WhenFalse=Collapsed}}" />
                            <l:ErrorPresenter x:Name="ErrorPresenter"
                                          Content="{Binding Path=(Validation.Errors),
                                                            RelativeSource={RelativeSource AncestorType={x:Type l:SettingControlBase}}}"
                                          Visibility="{Binding Path=(Validation.HasError),
                                                               RelativeSource={RelativeSource AncestorType={x:Type l:SettingControlBase}},
                                                               Converter={l:BooleanToVisibilityConverter WhenTrue=Visible,
                                                                                                         WhenNull=Collapsed,
                                                                                                         WhenFalse=Collapsed}}" />
                        </StackPanel>

                        <TextBlock x:Name="OldValue"
                                   Style="{Binding OldValueStyle,
                                                   RelativeSource={RelativeSource AncestorType={x:Type l:SettingControlBase}}}"
                                   Visibility="{Binding IsDirty,
                                                        RelativeSource={RelativeSource AncestorType={x:Type l:SettingControlBase}},
                                                        Converter={l:BooleanToVisibilityConverter WhenTrue=Visible,
                                                                                                  WhenNull=Hidden,
                                                                                                  WhenFalse=Hidden}}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>