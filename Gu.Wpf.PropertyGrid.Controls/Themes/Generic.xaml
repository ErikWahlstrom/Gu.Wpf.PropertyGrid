<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Gu.PropertyGrid">
    <Style x:Key="{x:Static local:Keys.HeaderTextBlockStyleKey}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <ControlTemplate x:Key="{x:Static local:Keys.RowTemplateKey}" TargetType="{x:Type HeaderedContentControl}">
        <Grid Margin="{TemplateBinding Padding}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="{x:Static local:SharedSizeGroups.LabelColumn}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ContentPresenter Grid.Column="0"
                              Margin="0,0,6,0"
                              ContentSource="Header" />

            <ContentPresenter Grid.Column="1" ContentSource="Content" />
        </Grid>
    </ControlTemplate>

    <Style x:Key="{x:Static local:Keys.RowStyleKey}" TargetType="{x:Type HeaderedContentControl}">
        <Setter Property="Template" Value="{DynamicResource {x:Static local:Keys.RowTemplateKey}}" />
    </Style>


</ResourceDictionary>