                                                      Converter={x:Static l:InvertBoolConverter.Default}}"
                                  IsReadOnly="{TemplateBinding IsReadOnly}"
                                  ItemsSource="{TemplateBinding EnumValues}"
                                  SelectedItem="{Binding Value,
                                                         RelativeSource={RelativeSource TemplatedParent},
